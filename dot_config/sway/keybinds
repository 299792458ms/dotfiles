bindsym $mod+shift+alt+9 [workspace=__focused__] move to workspace number 9, workspace 9
bindsym $mod+shift+alt+0 [workspace=__focused__] move to workspace number 10, workspace 10
bindsym $mod+ctrl+delete [workspace=] kill
bindgesture swipe:3:down workspace next
bindgesture swipe:3:up workspace prev

# scratchpad
bindsym $mod+shift+tab move container to scratchpad
bindsym $mod+tab scratchpad show
# bindgesture swipe:3:down scratchpad show
# bindgesture swipe:3:up move container to scratchpad

# pulseaudio
bindsym XF86AudioRaiseVolume exec wpctl set-mute @DEFAULT_AUDIO_SINK@ 0 && wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.05+
bindsym XF86AudioLowerVolume exec wpctl set-mute @DEFAULT_AUDIO_SINK@ 0 && wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.05-
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym XF86AudioMicMute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

# brightness
bindsym XF86MonBrightnessUp exec brillo -qA 2 -u 200000
bindsym XF86MonBrightnessDown exec brillo -qU 2 -u 200000

# screenshots
bindsym  alt+print         exec  ~/scripts/screenshots/sway/allmonitors.sh
bindsym  print             exec  ~/scripts/screenshots/sway/activemonitor.sh
bindsym  shift+print       exec  ~/scripts/screenshots/sway/window.sh
bindsym  ctrl+print        exec  ~/scripts/screenshots/sway/area.sh
bindsym  $mod+alt+print    exec  ~/scripts/screenshots/sway/allmonitors-edit.sh
bindsym  $mod+print        exec  ~/scripts/screenshots/sway/activemonitor-edit.sh
bindsym  $mod+shift+print  exec  ~/scripts/screenshots/sway/window-edit.sh
bindsym  $mod+ctrl+print   exec  ~/scripts/screenshots/sway/area-edit.sh

# music
bindsym $mod+q exec mpc prev
bindsym $mod+w exec mpc toggle
bindsym $mod+e exec mpc next
bindsym $mod+shift+q exec mpc seek -10
bindsym $mod+shift+w exec mpc stop
bindsym $mod+shift+e exec mpc seek +10
bindsym $mod+control+q exec mpc seek 0

