# named workspaces
bindsym $mod+plus exec /home/alec/scripts/launch/workpaces/launch-music-ws.sh
bindsym $mod+braceleft exec /home/alec/scripts/launch/workpaces/launch-mail-ws.sh

# scratchpad
bindsym $mod+shift+tab move container to scratchpad
bindsym $mod+tab scratchpad show
# bindgesture swipe:3:down scratchpad show
# bindgesture swipe:3:up move container to scratchpad

# connectivity
bindsym $mod+delete exec footclient -T 'bluetooth420' -e bluetui
bindsym $mod+insert exec footclient -T 'wifi420' -e impala

# pulseaudio
bindsym --locked XF86AudioRaiseVolume exec wpctl set-mute @DEFAULT_AUDIO_SINK@ 0 && wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.05+
bindsym --locked XF86AudioLowerVolume exec wpctl set-mute @DEFAULT_AUDIO_SINK@ 0 && wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.05-
bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym --locked XF86AudioMicMute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

# brightness
bindsym --locked XF86MonBrightnessUp exec brillo -qA 2 -u 200000
bindsym --locked XF86MonBrightnessDown exec brillo -qU 2 -u 200000

# screenshots
bindsym --locked alt+print         exec  ~/scripts/screenshots/sway/allmonitors.sh
bindsym --locked print             exec  ~/scripts/screenshots/sway/activemonitor.sh
bindsym --locked shift+print       exec  ~/scripts/screenshots/sway/window.sh
bindsym --locked ctrl+print        exec  ~/scripts/screenshots/sway/area.sh
bindsym --locked $mod+alt+print    exec  ~/scripts/screenshots/sway/allmonitors-edit.sh
bindsym --locked $mod+print        exec  ~/scripts/screenshots/sway/activemonitor-edit.sh
bindsym --locked $mod+shift+print  exec  ~/scripts/screenshots/sway/window-edit.sh
bindsym --locked $mod+ctrl+print   exec  ~/scripts/screenshots/sway/area-edit.sh

# music
bindsym --locked $mod+q exec mpc prev
bindsym --locked $mod+w exec mpc toggle
bindsym --locked $mod+e exec mpc next
bindsym --locked $mod+shift+q exec mpc seek -10
bindsym --locked $mod+shift+w exec mpc stop
bindsym --locked $mod+shift+e exec mpc seek +10
bindsym --locked $mod+control+q exec mpc seek 0

