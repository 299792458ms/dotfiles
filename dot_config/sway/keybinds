# ··· KEYBINDS ···

# sway
bindsym $mod+Shift+r reload
bindsym $mod+Shift+backspace exec swaymsg exit
bindsym $mod+l exec loginctl lock-session

# monitor control
mode "monitor-control" {
    bindsym right exec shikanectl switch 'hdmi-hotplug-right' &
    bindsym left exec shikanectl switch 'hdmi-hotplug-left' &
    bindsym shift+right exec shikanectl switch 'switcheroo' &
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+shift+bar mode "monitor-control"

# panels
bindsym $mod+minus exec swaync-client -t
bindsym $mod+o exec nwg-bar -t logout_sway.json -s logout_square.css

# launch
bindsym $mod+d exec $menu
bindsym $mod+i exec $term -e htop
bindsym $mod+b exec $browser 
bindsym $mod+shift+return exec $term
bindsym $mod+return exec $termclient
bindsym $mod+p exec $display
bindsym $mod+n exec $termclient -e yazi
bindsym $mod+m exec $filemanager
bindsym $mod+k exec $notes

# windows
bindsym $mod+c kill
bindsym $mod+shift+c [workspace=__focused__] kill
bindsym $mod+left focus left
bindsym $mod+down focus down
bindsym $mod+up focus up
bindsym $mod+right focus right
bindsym $mod+a focus parent
bindsym $mod+s focus child
bindsym $mod+shift+Left move left
bindsym $mod+shift+Down move down
bindsym $mod+shift+Up move up
bindsym $mod+shift+Right move right
bindsym $mod+h splith
bindsym $mod+v splitv
bindsym $mod+f fullscreen
bindsym $mod+j layout toggle split
bindsym $mod+space floating toggle
bindsym $mod+shift+space focus mode_toggle
bindsym $mod+ctrl+Left resize shrink width 10px
bindsym $mod+ctrl+Up resize grow height 10px
bindsym $mod+ctrl+Down resize shrink height 10px
bindsym $mod+ctrl+Right resize grow width 10px
floating_modifier $mod normal

