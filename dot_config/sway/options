mouse_warping output
focus_wrapping no
gaps inner 8
smart_borders no
smart_gaps off
default_border pixel 3
default_floating_border pixel 3
focus_on_window_activation focus
workspace_auto_back_and_forth yes
# auto_back_and_forth fucks up moving all container workspace to workspace

output * mode 1920x1080 pos 0 0 bg ~/Pictures/wallpapers/synthwave/sw06.png fill

input type:keyboard {
    xkb_layout    "latam"
    xkb_model     "pc105"
    repeat_delay  300
    repeat_rate   50
}

input type:pointer {
    pointer_accel 0.1
    accel_profile flat
}

input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    tap_button_map lrm
    accel_profile flat
    drag enabled
    pointer_accel 1.0
    scroll_factor 0.2
}

#class                   border     backgr.    text  indicator  child_border
client.focused           $magenta   $magenta   $bg   $cyan      $magenta
client.focused_inactive  $dimfg     $dimfg     $bg   $dimfg     $dimfg
client.unfocused         $dimfg     $dimfg     $bg   $dimfg     $dimfg
client.urgent            $critical  $critical  $bg   $critical  $critical
client.placeholder       $inv       $dimfg     $bg   $inv       $dimfg

bar {
    position bottom
    output *
    font pango:Jet Brains Mono Nerd Font 16    
    wrap_scroll no
    tray_output *
    separator_symbol |
    mode dock
    modifier mod4
    status_command i3status

    colors {
        statusline $fg
        background $bg
        active_workspace $bg $cyan $bg
        inactive_workspace $bg $bg $dimfg
        focused_workspace  $bg $magenta $bg  
        urgent_workspace $bg $red $bg
     }
}
